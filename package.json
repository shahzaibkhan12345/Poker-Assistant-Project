{
  "name": "poker-gto-assistant",
  "version": "1.0.0",
  "description": "GTO Poker Assistant for 6-max cash games",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": [
    "poker",
    "gto",
    "assistant",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.pokergto.assistant",
    "productName": "GTO Poker Assistant",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  }
}